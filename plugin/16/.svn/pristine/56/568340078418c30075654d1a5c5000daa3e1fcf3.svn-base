@import "config";
@import "../../../lib/scss/config";

.#{$public_wrap_div} {
    width: $container_pc;
    margin: 0 auto;
}

.#{$public_wrap_div} .news_list{
    width:100%;
    margin:0 auto;
}

.#{$public_wrap_div} .news_list li{
    padding: 40px 0;
    border-bottom: 1px solid #ececec;

}
.#{$public_wrap_div} .news_txt{
  float:left;
  width:calc(100% - 264px);
  transition: all 0.3s;
  -webkit-transition: all 0s;
  -moz-transition: all 0s;
  -ms-transition: all 0s;
  -o-transition: all 0s;
  transition: all 0s;
}
.#{$public_wrap_div} .news_txt>div{
  margin-bottom:10px;
}
.#{$public_wrap_div} .news_txt .news_title{
  width:100%;
  color: #000;
   margin-bottom: 20px;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}

.#{$public_wrap_div} .news_txt div{
  font-size: 14px;
}
.#{$public_wrap_div} .news_txt div{
  color: #818181;
  font-size: 16px;
  line-height:26px;
  overflow: hidden;
  vertical-align: middle;

}
.#{$public_wrap_div} .news_txt .news_title .line{
  display:inline-block;
  width:0px;
  height:1px; 
  margin-bottom:5px;
  background-color: #666;
  transition:all .5s;
}
.#{$public_wrap_div} .news_txt .news_descrip{
    display: inline-block;
    font-size: 14px;
    color: #666;
    line-height: 24px;
    font-style: normal;
    height: 48px;
    overflow: hidden;
}
.#{$public_wrap_div} .news_img{
    float:left;
    width:204px;
    height:145px;
    margin-right:30px;
    -webkit-transtion: all 0s ease-in-out; 
    -moz-transtion: all 0s ease-in-out; 
    -ms-transtion: all 0s ease-in-out; 
    -o-transtion: all 0s ease-in-out; 
    transition: all 0s ease-in-out;
}
.#{$public_wrap_div} .news_img img{
  display:block;
  width: 100%;
  height:100%;
}

.#{$public_wrap_div} .news_txt .news_date{
  color: #999;
  font-size: 14px;
  margin-bottom: 20px;
}

.#{$public_wrap_div} .news_date span{

  display: inline-block;

  color: #a6a6a6;

  font-size: 12px;

  margin-top: 8px;

}

.#{$public_wrap_div} .news_date .line{

  float: left;

  margin: -15px 0 0 74px;

  width: 35px;

  height: 1px;

  background: #bdbdbd;

  transition: all 0.3s;

  -webkit-transition: all 0.3s;

  -moz-transition: all 0.3s;

  -ms-transition: all 0.3s;

}
.#{$public_wrap_div} .news_list li:hover .line{
  width: 34px;
  margin-right: 10px;
  background: #828282;
}
@media screen and (min-width: 768px) {
  .hide_p{
    display:none !important;
  }
}


@media screen and (min-width: 992px) and (max-width: 1199px) {
  .#{$public_wrap_div} {
      width: $container_note_pc;
  }
}


@media screen and (min-width: 768px) and (max-width: 991px) {
  .#{$public_wrap_div} {
      width: $container_pad;
  }
}


@media screen and (max-width: 767px) {
    .#{$public_wrap_div} {
        width: $container_note_phone;
    }
    .hide_m{
      display:none !important;
    }
    .#{$public_wrap_div} .news_list{
        width: 100%;
        margin:0 auto;
    }
    .#{$public_wrap_div} .news_img{
        width: 30.77%;
        margin-right:0;
        height:auto;
        -webkit-transtion: all 0s ease-in-out; 
        -moz-transtion: all 0s ease-in-out; 
        -ms-transtion: all 0s ease-in-out; 
        -o-transtion: all 0s ease-in-out; 
        transition: all 0s ease-in-out;
    }
    .#{$public_wrap_div} .news_txt>div{
        font-size: 0.28rem;
        margin-bottom: 0;
        line-height:0.3rem;
    }
    .#{$public_wrap_div} .news_txt .news_title{
      font-size: 0.32rem;
      line-height: 0.48rem;
      color:#333;
      margin-bottom: 0.1rem;
      white-space:normal;
    }
    .#{$public_wrap_div} .news_txt .news_date_m{
      font-size: 0.28rem;
      line-height: 0.4rem;
      margin-top: 0.22rem;
    }
    .#{$public_wrap_div} .news_txt{
        float: right;
        width: 64.96%;
    }
    .#{$public_wrap_div} .news_list li{
        padding: 0.2rem 0;
    }
    .#{$public_wrap_div} .list_honor{
        margin-top: 0;
    }
    .#{$public_wrap_div} .mar_top{
        margin-top:0;
    }
    .#{$public_wrap_div} .news_txt .news_descrip {
        font-size: 0.24rem;
        line-height: 0.44rem;
        height:auto;
    }
    .#{$public_wrap_div} .news_list li:hover .line{
      width: 0;
      margin-right:0;
    }
}
