@import "../../../lib/scss/config";
@import "config";

$public-nav-136_3_num: 7;        

.#{$public_wrap_div}{
    width:100%;
}
.#{$public_wrap_div} .banner{
  width:100%;
  height: 480px;
  position: relative;
}
.#{$public_wrap_div} .bn_box{
  width: 100%;
  height: 64px;
  position: absolute;
  left: 0;
  bottom: 0;
  background: rgba(0,0,0,0.6);
}
.#{$public_wrap_div} .bn_nav{
  text-align: center;
}
.#{$public_wrap_div} .bn_nav li{
  display: inline-block;
  line-height: 64px;
  width: auto;
  border-left: 1px solid #9fa7a6;
}
.#{$public_wrap_div} .bn_nav li a{
  display: block;
  width: 168px;
  font-size: 16px;
  color: #fff;
  -webkit-transition: all 0s ease-in-out;
  -moz-transition: all 0s ease-in-out;
  -ms-transition: all 0s ease-in-out;
  -o-transition: all 0s ease-in-out;
  transition: all 0s ease-in-out;
}
.#{$public_wrap_div} .bn_nav li:last-child{
  border-right: 1px solid #9fa7a6;
}
.#{$public_wrap_div} .bn_nav .active a{
  color: #fff;
  background: #0e6eb8;
}

@media screen and (min-width: 992px) and (max-width: 1200px) {
  .#{$public_wrap_div} .bn_nav li a{
    width: 140px;
  }
}

@media screen and (min-width: 768px) and (max-width: 992px) {
  .#{$public_wrap_div} .bn_nav li{
    width: 100% / $public-nav-136_3_num;
  }
  .#{$public_wrap_div} .bn_nav li a{
    width: 100%;
    font-size:14px;
  }
}

@media screen and (min-width: 769px) {
  .#{$public_wrap_div} .bn_nav li a:hover{
    background:#0e6eb8;
  }
}

@media screen and (max-width: 768px) {
    .#{$public_wrap_div} .scroll_menu { width:100%; float:left;overflow:auto}
    .#{$public_wrap_div} .scroll_menu ul { float:left; min-width:100%; white-space:nowrap; position:relative}
    .#{$public_wrap_div} .banner{
      height: 3.6rem;
      position: relative;
    }
    .#{$public_wrap_div} .bn_box{
      height:0.8rem;
      background: #ECECEC;
      overflow:hidden;
    }
    .#{$public_wrap_div} .bn_nav{
      overflow:auto;
      white-space:nowrap;
    }
    .#{$public_wrap_div} .bn_nav li{
      width: auto;
      overflow:auto;
      height:0.8rem;
      border:none !important;
      margin:0 0.22rem;
    }
    .#{$public_wrap_div} .bn_nav li a{
      box-sizing:border-box;
      width:auto;
      font-size:0.26rem;
      color:#000;
      line-height:0.78rem;
    }
    .#{$public_wrap_div} .bn_nav .active a{
      color:#000;
      background:none;
      border-bottom:0.02rem solid #0e6eb8;
    }
  
}









