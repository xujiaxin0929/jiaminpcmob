@import "config";
@import "../../../lib/scss/config";      
$public-nav-136_6_num:6;


.#{$public_wrap_div}{
    width:100%;
    height:50px;
    margin:0 auto;
}

.#{$public_wrap_div} .column-nav {
  box-sizing:border-box;
  line-height: normal;
  text-align: center;
  width: 100%;
  height:50px;
  border:1px solid $theme_color;
  float: none;
  margin: 0 auto;
}

.#{$public_wrap_div} .column-nav li {
  display: inline-block;
  width: 100% / $public-nav-136_6_num;
  overflow: hidden;
  border-right: solid 1px $theme_color;
}
.#{$public_wrap_div} .column-nav li a {
  display: block;
  font-size: 18px;
  line-height:48px;
  color: #666666;
  white-space:nowrap;
  -webkit-transition: all 0s ease-in-out;
  -moz-transition: all 0s ease-in-out;
  -ms-transition: all 0s ease-in-out;
  -o-transition: all 0s ease-in-out;
  transition: all 0s ease-in-out;
}
.#{$public_wrap_div} .column-nav li.active a, .column-nav li a:hover {
  color: #FFF;
  background: $theme_color;
}

@media screen and (min-width: 768px) and (max-width: 992px) {
  .#{$public_wrap_div} .column-nav li a {
    font-size: 16px;
  }
}

@media screen and (max-width: 992px) {
  .#{$public_wrap_div} .column-nav li a:hover {
    color: #333;
    background: #fff;
  }
  .#{$public_wrap_div} .column-nav li.active a:hover {
    color: #fff;
    background: $theme_color;
  }
}

@media screen and (max-width: 768px) {
  .#{$public_wrap_div} .column-nav li a {
    font-size: 16px;
  }
  .#{$public_wrap_div} .column-nav{ 
      height:0.6rem;
      width:93.6%;
      border:none;
  }
  .#{$public_wrap_div} .column-nav li a{
    font-size: 0.32rem;
    line-height: 0.4rem;
    white-space:normal;
    padding: 0.1rem 0;
  }
  .#{$public_wrap_div} .column-nav li{
    display: block;
    float: left;
    width: 33.33%;
    border: solid 1px $theme_color;
    margin: 0 0 -1px -1px;
  }
}










