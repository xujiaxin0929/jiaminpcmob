@import "config";
@import "../../../lib/scss/config";

.#{$public_wrap_div} .pc_head{
    height: 96px;
    background: #06090f;
}
.#{$public_wrap_div} .content{
    width: 1420px;
    margin: 0 auto;
}
.#{$public_wrap_div} .head_left{
    width: 80%;
    float: left;
    height: 96px;
    position: relative;
    .logo{
        margin-top: 14px;
        width: 218px;
        float: left;
    }
    .menu{
        float: left;
        margin: 52px 0 0 80px;
    }
}
.#{$public_wrap_div} .head_left .menu>li{
    float: left;
    margin-right: 40px;
    height: 44px;
    position: relative;
    a{
        color: #fff;
        font-size: 18px;
    }
}
.#{$public_wrap_div} .head_left .nav_pred{
    display: none;
    width: 100%;
    height: 289px;
    position: fixed;
    left: 0;
    top: 96px;
    background: #324a5c;
    z-index: 11;
}
.#{$public_wrap_div} .head_left .nav_pred  ul li a:hover{
    color: #b31d23;
}
.#{$public_wrap_div} .head_left .nav_layer_pro{
    display: none;
    width: 618px;
    height: 289px;
    position: absolute;
    left: -40px;
    top: 44px;
    padding: 38px;
    background: #324a5c;
    z-index: 11;
}
.#{$public_wrap_div} .head_left .nav_layer_pro{
    ul{
        width: 216px;
        float: left;
        li{
            float: left;
            margin: 0 60px 26px 0;
            a{
                font-size: 16px;
                color: #c4c4c4;
            }
            a:hover{
                 color: #ffffff;
            }
        }
        li:nth-child(2n){
            margin-right: 0;
        }
    }
    .thumb{
        width: 278px;
        float: right;
    }
}
.#{$public_wrap_div} .head_left .nav_pred .wrap{
    width: 760px;
    margin: 0 auto;
    li{
        float: left;
        width: 190px;
        height: 289px;
        padding: 60px 40px 0;
        a{
            font-size: 14px;
            display: block;
            color: #c4c4c4;
            margin-bottom: 18px;
        }
        a:hover{
            color: #fff;
        }
        a:nth-child(1){
            font-size: 18px;
        }
    }
    li:hover{
        background: #2e4556;
    }
}
.#{$public_wrap_div} .head_left .line{
    position: absolute;
    bottom: 0px;
    width: 36px;
    height: 4px;
    left: 298px;
    font-size: 3px;
    background-color: #b31d23;
}


.#{$public_wrap_div} .head_right{
    width: 20%;
    float: right;
    padding-top: 34px;
    li{
        height: 96px;
        float: left;
        margin-left: 25px;
        img{
            margin-right: 10px;
        }
        a{
            color: #999;
            font-size: 14px;
        }
    }
}
.#{$public_wrap_div} .head_right .group{
    position: relative;
    div{
        display: none;
        position: absolute;
        left: -100px;
        top: 50px;
        width: 258px;
        height: 112px;
        background: #fff;
        padding: 20px;
        a{
            display: block;
            margin-bottom: 10px;
        }
    }
}
.#{$public_wrap_div} .head_right .group:hover div{
    display: block;
}


.#{$public_wrap_div} .phone-logo-box {
  display: table;
  float: left;
  height: 58px;
  width: 60%;
  overflow: hidden;
}

.#{$public_wrap_div} a.phone-logo {
  display: table-cell;
  text-align: left;
  vertical-align: middle;
  padding-left: 10px;
}

.#{$public_wrap_div} a.phone-logo img {
  display: block;
  max-width: 100%;
  height: calc(100% - 20px);
}

.#{$public_wrap_div} .hamburger {
  padding: 15px 15px;
  display: block;
  float: right;
  cursor: pointer;
  transition-property: opacity, -webkit-filter;
  transition-property: opacity, filter;
  transition-property: opacity, filter, -webkit-filter;
  transition-duration: 0.15s;
  transition-timing-function: linear;
  font: inherit;
  color: inherit;
  text-transform: none;
  background-color: transparent;
  border: 0;
  margin: 0;
  overflow: visible;
}

.#{$public_wrap_div} .hamburger:hover {
  opacity: 0.7;
}

.#{$public_wrap_div} .hamburger-box {
  width: 30px;
  height: 24px;
  display: block;
  position: relative;
}

.#{$public_wrap_div} .hamburger-inner {
  display: block;
  top: 50%;
  margin-top: -2px;
}

.#{$public_wrap_div} .hamburger-inner, .hamburger-inner::before, .hamburger-inner::after {
  width: 30px;
  height: 4px;
  background-color: #fff;
  border-radius: 4px;
  position: absolute;
  transition-property: -webkit-transform;
  transition-property: transform;
  transition-property: transform, -webkit-transform;
  transition-duration: 0.15s;
  transition-timing-function: ease;
}

.#{$public_wrap_div} .hamburger-inner::before, .hamburger-inner::after {
  content: "";
  display: block;
}

.#{$public_wrap_div} .hamburger-inner::before {
  top: -10px;
}

.#{$public_wrap_div} .hamburger-inner::after {
  bottom: -10px;
}

.#{$public_wrap_div} .hamburger--squeeze .hamburger-inner {
  transition-duration: 0.1s;
  transition-timing-function: cubic-bezier(0.55, 0.055, 0.675, 0.19);
}

.#{$public_wrap_div} .hamburger--squeeze .hamburger-inner::before {
  transition: top 0.1s 0.14s ease, opacity 0.1s ease;
}

.#{$public_wrap_div} .hamburger--squeeze .hamburger-inner::after {
  transition: bottom 0.1s 0.14s ease, -webkit-transform 0.1s cubic-bezier(0.55, 0.055, 0.675, 0.19);
  transition: bottom 0.1s 0.14s ease, transform 0.1s cubic-bezier(0.55, 0.055, 0.675, 0.19);
  transition: bottom 0.1s 0.14s ease, transform 0.1s cubic-bezier(0.55, 0.055, 0.675, 0.19), -webkit-transform 0.1s cubic-bezier(0.55, 0.055, 0.675, 0.19);
}

html.mm-opened .hamburger--squeeze .hamburger-inner {
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
  transition-delay: 0.14s;
  transition-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
}

html.mm-opened .hamburger--squeeze .hamburger-inner::before {
  top: 0;
  opacity: 0;
  transition: top 0.1s ease, opacity 0.1s 0.14s ease;
}

html.mm-opened .hamburger--squeeze .hamburger-inner::after {
  bottom: 0;
  -webkit-transform: rotate(-90deg);
  transform: rotate(-90deg);
  transition: bottom 0.1s ease, -webkit-transform 0.1s 0.14s cubic-bezier(0.215, 0.61, 0.355, 1);
  transition: bottom 0.1s ease, transform 0.1s 0.14s cubic-bezier(0.215, 0.61, 0.355, 1);
  transition: bottom 0.1s ease, transform 0.1s 0.14s cubic-bezier(0.215, 0.61, 0.355, 1), -webkit-transform 0.1s 0.14s cubic-bezier(0.215, 0.61, 0.355, 1);
}
.#{$public_wrap_div}  #header_phone{
    display: none;
}

@media only screen and(max-width:1400px){
    .#{$public_wrap_div} .content{
        width: 1200px;
        margin: 0 auto;
    }
}


@media only screen and (max-width: 992px) {
  .#{$public_wrap_div}  .pc_head {
    display: none;
  }

  .#{$public_wrap_div}  #header_phone {
    display: block;
    text-align: right;
    position: fixed;
    width: 100%;
    height: 58px;
    overflow: hidden;
    z-index: 5;
    background: #06090f;
  }
}