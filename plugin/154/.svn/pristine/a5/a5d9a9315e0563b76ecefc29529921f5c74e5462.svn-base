@import "config";
@import "../../../lib/scss/config";

.#{$public_wrap_div}{
	width:90%;
  font-family:"Microsoft Yahei";
  margin:0 auto;
}

@media screen and (min-width: 768px) and (max-width: 991px) {
  .#{$public_wrap_div}{
    width:96%;
  }
}
@media screen and (min-width: 992px) and (max-width: 1199px) {
  .#{$public_wrap_div}{
    width:96%;
  }
}
@media screen and (max-width: 767px) {
  .#{$public_wrap_div}{
    width:100%;
  }
}

.#{$public_wrap_div} .pagination {

  display: block;

  margin: 54px 0 44px 0;

  font-size: 0px;

  line-height: normal;

  text-align: center;

}

.#{$public_wrap_div} .pagination li {display: inline-block;width: 40px;height: 40px;font-size: 12px;margin-left: 10px;}

.#{$public_wrap_div} .pagination li.active a{
  color:#fff;
  background-color: #337ab7;
}
.#{$public_wrap_div} .pagination li:hover a{
  color:#fff;
  background-color: #337ab7;
}

.#{$public_wrap_div} .pagination li a, .pagination li span {
  display: block;
  width: 40px;
  height: 40px;
  text-align: center;
  line-height: 38px;
  color: #000;
  padding:0;
  border-radius: 5px !important;
  background: #fafafa;
}

.#{$public_wrap_div} .m_pagination{

  display: none;

}

@media screen and (max-width:767px){
  .#{$public_wrap_div} .sn_outbox{
    width: 100%;
  }
  .#{$public_wrap_div} .news_list.newscenter_list{
    width: 100%;
  }
  .#{$public_wrap_div} .pagination_pc{
    display: none;
  }
  .#{$public_wrap_div} .m_pagination{
    display: block;
    margin-bottom:1.04rem;
  }
  .#{$public_wrap_div} .m_pagination .pagination{
    margin: 0;
  }
  .#{$public_wrap_div} .m_pagination .pagination li.active a{
    color:#ff1a1a;
    border-color:#ff1a1a;
  }
  .#{$public_wrap_div} .m_pagination .pagination li{
    display:inline-block;
    width:2.68rem;
    height:0.9rem;
    margin:0 0.21rem;
  }
  .#{$public_wrap_div} .m_pagination .pagination li a{
      display: block;
      width: 2.66rem;
      height:0.88rem;
      color:#ccc;
      font-size: 0.4rem;
      text-align: center;
      line-height: 0.88rem;
      border: 1px solid #ccc;
      border-radius:0 !important;
      background: #fff;
      -webkit-transtion: all 0s ease-in-out;
      -moz-transtion: all 0s ease-in-out;
      -ms-transtion: all 0s ease-in-out;
      -o-transtion: all 0s ease-in-out;
      transition: all 0s ease-in-out;
  }
  .#{$public_wrap_div} .m_pagination p{
    text-align: center;
    margin-top:1.56rem;
  }
  .#{$public_wrap_div} .m_pagination p span{
    display:inline-block;
    width:2.68rem;
    height:0.9rem;
    margin:0 0.21rem;
  }
  
}

